<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>AEGIS - Missões</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-shield-halved text-primary"></i> AEGIS</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/herois">Heróis</a></li>
                    <li class="nav-item"><a class="nav-link" href="/viloes">Vilões</a></li>
                    <li class="nav-item"><a class="nav-link" href="/poderes">Poderes</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/missoes">Missões</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-map-location-dot text-success"></i> Gestão de Operações</h2>
        </div>

        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-success text-white fw-bold">Abrir Nova Ordem de Missão</div>
            <div class="card-body">
                <form action="/missoes/cadastrar" method="POST" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Nome da Operação</label>
                        <input type="text" name="nome" class="form-control" placeholder="Ex: Operação Tesseract" required>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Data de Solicitação</label>
                        <input type="date" name="data" class="form-control" required>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Nível de Ameaça</label>
                        <select name="nivel" class="form-select">
                            <option value="Baixo">Baixo</option>
                            <option value="Médio">Médio</option>
                            <option value="Alto">Alto</option>
                            <option value="Crítico">Crítico (Ómega)</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Localização</label>
                        <input type="text" name="local" class="form-control" placeholder="Ex: Nova York" required>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success px-4"><i class="fas fa-plus"></i> Criar Missão</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive bg-white shadow rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Operação</th>
                        <th>Data</th>
                        <th>Nível</th>
                        <th>Local</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (missoes.length > 0) { %>
                        <% missoes.forEach(m => { %>
                            <tr>
                                <td>#<%= m.IdMissao %></td>
                                <td><strong><%= m.NomeMissao %></strong></td>
                                <td><%= m.DataSolicitacao ? new Date(m.DataSolicitacao).toLocaleDateString('pt-BR') : 'Sem data' %></td>
                                <td>
                                    <span class="badge <%= m.NivelAmeaca == 'Crítico' ? 'bg-danger' : 'bg-info text-dark' %>">
                                        <%= m.NivelAmeaca %>
                                    </span>
                                </td>
                                <td><i class="fas fa-location-pin text-muted me-1"></i> <%= m.Localizacao %></td>
                                <td class="text-center">
                                    <a href="/missoes/gerenciar/<%= m.IdMissao %>" class="btn btn-sm btn-info text-white me-2">
                                        <i class="fas fa-users-gear"></i> Gerenciar
                                    </a>

                                    <a href="/missoes/editar/<%= m.IdMissao %>" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>

                                    <a href="/missoes/deletar/<%= m.IdMissao %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Abortar missão permanentemente?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="6" class="text-center py-4">Nenhuma missão ativa no momento.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>