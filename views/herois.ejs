<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AEGIS - Heróis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        body { background-color: #f8f9fa; }
        .hero-header { background: #007bff; color: white; padding: 1.5rem 0; margin-bottom: 2rem; }
        .main-container { margin-top: -1rem; }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-shield-halved"></i> AEGIS</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="/herois">Heróis</a></li>
                    <li class="nav-item"><a class="nav-link" href="/viloes">Vilões</a></li>
                    <li class="nav-item"><a class="nav-link" href="/poderes">Poderes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/missoes">Missões</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="hero-header shadow-sm">
        <div class="container text-center">
            <h1><i class="fas fa-mask"></i> Base de Dados de Heróis</h1>
            <p>Gerenciamento de Identidades e Habilidades</p>
        </div>
    </header>

    <div class="container main-container">
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-dark text-white">
                <i class="fas fa-user-plus"></i> Recrutar Novo Herói
            </div>
            <div class="card-body">
                <form action="/herois/cadastrar" method="POST" class="row g-3">
                    <div class="col-md-3">
                        <input type="text" name="nome" class="form-control" placeholder="Nome Real" required>
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="codinome" class="form-control" placeholder="Codinome" required>
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="identidade" class="form-control" placeholder="Identidade Secreta">
                    </div>
                    <div class="col-md-2">
                        <select name="status" class="form-select">
                            <option value="Ativo">Ativo</option>
                            <option value="Inativo">Inativo</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100">Salvar</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-dark fw-bold">Agentes Registrados</h5>
                <span class="badge bg-primary"><%= herois.length %> Heróis</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Codinome</th>
                                <th>Nome Real</th>
                                <th>Status</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (herois.length > 0) { %>
                                <% herois.forEach(heroi => { %>
                                    <tr>
                                        <td>#<%= heroi.IdHeroi %></td>
                                        <td><span class="fw-bold text-primary"><%= heroi.Codinome %></span></td>
                                        <td><%= heroi.Nome %></td>
                                        <td>
                                            <span class="badge <%= heroi.StatusAtividade === 'Ativo' ? 'bg-success' : 'bg-secondary' %>">
                                                <%= heroi.StatusAtividade %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a href="/herois/poderes" class="btn btn-sm btn-warning text-dark me-2">
                                                <i class="fas fa-bolt"></i> + Poder
                                            </a>

                                            <a href="/herois/editar/<%= heroi.IdHeroi %>" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>

                                            <a href="/herois/deletar/<%= heroi.IdHeroi %>" 
                                               class="btn btn-sm btn-outline-danger" 
                                               onclick="return confirm('Apagar registro permanentemente?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center py-4">Nenhum herói na base.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>